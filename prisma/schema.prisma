generator client {
  provider = "prisma-client"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  STAFF
  STUDENT
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
}

model Student {
  id        String   @id @default(uuid())
  name      String
  cpf       String   @unique
  phone     String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  memberships Membership[]
}

model Plan {
  id        String   @id @default(uuid())
  name      String
  price     Float
  duration  Int // dias
  createdAt DateTime @default(now())

  memberships Membership[]
}

model Membership {
  id        String   @id @default(uuid())
  studentId String
  planId    String
  startAt   DateTime
  endAt     DateTime
  active    Boolean  @default(true)

  student Student @relation(fields: [studentId], references: [id])
  plan    Plan    @relation(fields: [planId], references: [id])
}
